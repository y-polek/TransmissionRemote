<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>

        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarTitleAppearance">
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
        <item name="android:textColor">@color/text_primary_inverse</item>
    </style>

    <style name="ActionBarSubTitleAppearance" parent="ActionBarTitleAppearance">
        <item name="android:textSize">@dimen/actionbar_subtitle_text_size</item>
    </style>
</resources>
